package practice.TwoPointer;

import java.util.Arrays;

public class SumOfArrayByBruteForce {

	public static void main(String[] args) {
		        int[] numbers = {71, 18, 42, 21, 67, 32, 95, 14, 56, 87};

		        // Separate even numbers
		        int[] evenArray = Arrays.stream(numbers)
		                                .filter(n -> n % 2 == 0)
		                                .toArray();

		        // Separate odd numbers
		        int[] oddArray = Arrays.stream(numbers)
		                               .filter(n -> n % 2 != 0)
		                               .toArray();

		        // Print results
		        System.out.println("Even Numbers: " + Arrays.toString(evenArray));
		        System.out.println("Odd Numbers: " + Arrays.toString(oddArray));
		    }
		}
	}
}
